@model Drone_Simulator_MVC.Models.SimulatorModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var simModel = Model;
}
<h1>Index</h1>

<h4>PositionModel</h4>
<hr />
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("", "", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-6">
                    <div>
                        @Html.LabelFor(model=> model.DronePosition.xBorder)
                        @Html.TextBoxFor(model=> model.DronePosition.xBorder)
                        @Html.ValidationMessageFor(model => model.DronePosition.xBorder)
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        @Html.LabelFor(model => model.DronePosition.yBorder)
                        @Html.TextBoxFor(model => model.DronePosition.yBorder)
                        @Html.ValidationMessageFor(model => model.DronePosition.yBorder)
                    </div>
                </div>
            </div>
            <div class="row" id="dvCoordinates">
                <div class="col-md-6">
                    <div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="">

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Start" class="btn btn-primary" asp-action="Start" />
                    </div>
                </div>
            </div>
            <div class="row" id="dvDronePanel">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        @Html.LabelFor(model => model.DronePosition.xcoordinate)
                        @Html.TextBoxFor(model => model.DronePosition.xcoordinate)
                        @Html.ValidationMessageFor(model => model.DronePosition.xcoordinate)
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        @Html.LabelFor(model => model.DronePosition.ycoordinate)
                        @Html.TextBoxFor(model => model.DronePosition.ycoordinate)
                        @Html.ValidationMessageFor(model => model.DronePosition.ycoordinate)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="">
                        @Html.LabelFor(model => model.DroneFlyTime.flytime)
                        @Html.TextBoxFor(model => model.DroneFlyTime.flytime)
                        @Html.ValidationMessageFor(model => model.DroneFlyTime.flytime)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="">
                        <div id="dvLight">Light On</div>
                        @Html.HiddenFor(model => model.DroneFlasher.status)
                        @Html.HiddenFor(model => model.DroneState.state)
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        @Html.HiddenFor(model => model.Dronelight.status)
                        <input type="submit" value="Light" class="btn btn-primary" asp-action="Light" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        @Html.LabelFor(model => model.DroneHorn.time)
                        <input type="submit" value="Horn" class="btn btn-primary" asp-action="Horn" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="">
                        <input type="submit" value="Flash" class="btn btn-primary" asp-action="Flash" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="">
                        <input type="submit" value="Shutdown" class="btn btn-primary" asp-action="Shutdown" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            if (@Model.DroneState.state == 1) {
                $("#dvDronePanel").toggle();
                $("#dvCoordinates").toggle();
            }
            if (@Model.Dronelight.status == 2) {
                $("#dvLight").toggle();
            }
        });

    </script>
}
